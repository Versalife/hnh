---
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const navItems = [
  { href: `${base}/writing`,  label: 'Writing'  },
  { href: `${base}/sketches`, label: 'Sketches' },
  { href: `${base}/about`,    label: 'About'    },
];

const currentPath = Astro.url.pathname;
---

<header class="site-header">
  <a href={`${base}/`} class="logo">H+H</a>
  <nav>
    {navItems.map(item => (
      <a
        href={item.href}
        class={currentPath.startsWith(item.href) ? 'active' : ''}
        style={currentPath.startsWith(item.href) ? 'color: var(--color-accent)' : ''}
      >
        {item.label}
      </a>
    ))}
  </nav>
</header>
