---
import '../styles/global.css';
import '@fontsource-variable/jetbrains-mono';
import Header from '../components/Header.astro';

export interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
}

const { title, description = 'Hubris+Humility — notes on algorithms, biology, and computation.', canonicalUrl } = Astro.props;
const siteTitle = title === 'Hubris+Humility' ? title : `${title} · Hubris+Humility`;

// Strip trailing slash so we can always safely write `${base}/path`
// Works whether BASE_URL is '/hnh', '/hnh/', or '/'
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

// @font-face lives here (not global.css) so URLs can include the base path
const fontFaceCSS = `
@font-face {
  font-family: "et-book";
  src: url("${base}/fonts/et-book-roman-line-figures.woff2") format("woff2"),
       url("${base}/fonts/et-book-roman-line-figures.woff") format("woff");
  font-weight: normal;
  font-style: normal;
}
@font-face {
  font-family: "et-book";
  src: url("${base}/fonts/et-book-display-italic-old-style-figures.woff2") format("woff2"),
       url("${base}/fonts/et-book-display-italic-old-style-figures.woff") format("woff");
  font-weight: normal;
  font-style: italic;
}
@font-face {
  font-family: "et-book";
  src: url("${base}/fonts/et-book-bold-line-figures.woff2") format("woff2"),
       url("${base}/fonts/et-book-bold-line-figures.woff") format("woff");
  font-weight: bold;
  font-style: normal;
}
`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteTitle}</title>
    <meta name="description" content={description} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <link rel="alternate" type="application/rss+xml" title="Hubris+Humility" href={`${base}/rss.xml`} />
    <link rel="stylesheet" href={`${base}/katex/katex.min.css`} />
    <Fragment set:html={`<style>${fontFaceCSS}</style>`} />
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
